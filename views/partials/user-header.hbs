<header>
	<!-- TOP HEADER -->
	<div id="top-header">
		<div class="container">
			<ul class="header-links pull-left">
				{{#if logIn}}<li><a href="#"><i class="fa fa-phone"></i> +{{logIn.phoneNumber}}</a></li>
				{{else}}<li><a href="#"><i class="fa fa-phone"></i> phone</a></li>
				{{/if}}
				{{#if logIn}}<li><a href="#"><i class="fa fa-envelope-o"></i> {{logIn.email}}</a></li>
				{{else}}<li><a href="#"><i class="fa fa-envelope-o"></i> email</a></li>
				{{/if}}
				{{#if logIn}}<li><a href="#"><i class="fa fa-map-marker"></i> {{logIn.firstName}}</a></li>
				{{else}}<li><a href="#"><i class="fa fa-map-marker"></i> name</a></li>
				{{/if}}
				<li><a href="/"><i class="fa fa-home"></i> Home</a></li>
			</ul>
			<ul class="header-links pull-right">
				<li><a href="#"><i class="fa fa-dollar"></i> USD</a></li>
				{{#if logIn}}<li><a href="/logout"><i class="fa fa-user-o"></i>Logout</a></li>
				{{else}}<li><a href="/login"><i class="fa fa-user-o"></i> My Account</a></li>
				{{/if}}
			</ul>
		</div>
	</div>
	<!-- /TOP HEADER -->

	<!-- MAIN HEADER -->
	<div id="header">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- LOGO -->
				<div class="col-md-3">
					<div class="header-logo">
						<a href="#" class="logo">
							<img src="media/img/logo.png" alt="">
						</a>
					</div>
				</div>
				<!-- /LOGO -->

				<!-- SEARCH BAR -->
				<div class="col-md-5">
					<div class="header-search">
						<form>
							<select class="input-select">
								<option value="0">All Categories</option>
								<option value="1">Category 01</option>
								<option value="1">Category 02</option>
							</select>
							<input class="input" placeholder="Search here">
							<button class="search-btn">Search</button>
						</form>
					</div>
				</div>
				<!-- /SEARCH BAR -->

				<!-- ACCOUNT -->
				<div class="col-md-4 clearfix">
					<div class="header-ctn">
						<!-- Wishlist -->
						<div>
							{{#if logIn}}

							<a href="#" data-toggle="modal" data-target="#exampleModal">
								<a href="/profile">
									<i class="fa fa-user-circle-o"></i>
									<span>Profile</span>
								</a>
								{{!-- <div class="qty">2</div> --}}
							</a>
							{{else}}
							<a href="/login">
								<i class="fa fa-user-circle-o"></i>
								<span>Profile</span>

							</a>
							{{/if}}
						</div>
						<!-- /Wishlist -->
						<div class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
								{{#if logIn}}
								<a href="/my-wish">
									<i class="fa fa-shopping-cart"></i>
									<span>Wishlist</span>
									<div class="qty" id="wish-count">{{wishCount}}</div>
								</a>
								{{else}}
								<a href="/login">
									<i class="fa fa-shopping-cart"></i>
									<span>Wishlist</span>
									<div class="qty">0</div>
								</a>
								{{/if}}

							</a>

						</div>






						<!-- Cart -->
						<div class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
								{{#if logIn}}
								<a href="/my-cart">
									<i class="fa fa-shopping-cart"></i>
									<span>Your Cart</span>
									<div class="qty" id="cart-count">{{cartCount}}</div>
								</a>
								{{else}}
								<a href="/login">
									<i class="fa fa-shopping-cart"></i>
									<span>Your Cart</span>
									<div class="qty">0</div>
								</a>
								{{/if}}

							</a>

						</div>



						<!-- /Cart -->

						<!-- Menu Toogle -->
						{{!-- <div class="menu-toggle">
							<a href="#">
								<i class="fa fa-shopping-cart"></i>
								<span>Menu</span>
							</a>
						</div> --}}
						<!-- /Menu Toogle -->
					</div>
				</div>
				<!-- /ACCOUNT -->
			</div>
			<!-- row -->
		</div>
		<!-- container -->
	</div>
	<!-- /MAIN HEADER -->
</header>