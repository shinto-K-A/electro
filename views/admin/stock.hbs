<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-sm-12 col-xl-10">
				<div class="bg-secondary rounded h-100 p-4">
					<h6 class="mb-4">Stock</h6>
					<table class="table table-dark">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Product</th>
								<th scope="col">Image</th>
								<th scope="col">Stock</th>
								<th scope="col">Edit</th>
							</tr>
						</thead>
						<tbody>
							{{#each categor}}
							<tr>
								<th scope="row">{{math @index '+'1}}</th>
								<td>{{this.product}}</td>
								<td><img src="/product-images/{{this.image}}" alt="" style="height: 75px;width:75px">
								</td>
								<td>{{this.stock}}</td>
								<td><a href="/admin/edit-stock?id={{this._id}}" class="btn btn-info">Edit</a></td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>