    <!-- Table Start -->
    <div class="container-fluid pt-4 px-4">
    <div class=" row g-4">

        <div class="col-sm-12 ">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
            <a href="/admin/add-categorys" class="btn btn-success ml-auto">Add Category</a>
            <div class="bg-secondary rounded h-100 p-4 mt-3 ">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Product</th>
                            <th scope="col">Price</th>
                            <th scope="col">Offer price</th>
                            <th>Image</th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td scope="row">{{math @index '+'1}}</td>
                            <td>{{this.product}}</td>
                            <td>{{this.oldprice}}</td>
                            <td>{{this.newprice}}</td>
                            <td><img style="width: 50px;height: 50px;" src="/product-images/{{this.image}}" alt="">
                            <img style="width: 50px;height: 50px;" src="/product-images/{{this.image1}}" alt="">
                            <img style="width: 50px;height: 50px;" src="/product-images/{{this.image2}}" alt="">
                            <img style="width: 50px;height: 50px;" src="/product-images/{{this.image3}}" alt="">
                            </td>
                            <td>
                                <a href="/admin/edit-product?id={{this._id}}"  class="btn btn-info">Edit</a>
                                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                                    onclick="return confirm ('Are you sure to delete ?')">Delete </a>
                            </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>