<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<div class="col-sm-12 col-xl-10">
				<div class="bg-secondary rounded h-100 p-4">
					<h6 class="mb-4">Color Table</h6>
					<table class="table table-dark">
						<thead>
							<tr>
								<th scope="col">#</th>
								{{!-- <th>Address</th> --}}
								<th scope="col">Item</th>
								<th scope="col">Image</th>
								<th scope="col">Quantity</th>
								{{!-- <th scope="col">Status</th> --}}
								
							</tr>
						</thead>
						<tbody>
							{{#each products}}
							<tr>
								<th scope="row">{{math @index '+'1}}</th>
								{{!-- <th>{{this.deliveryDetails.city}}<br>{{this.deliveryDetails.place}}<br>{{this.deliveryDetails.housename}}<br>{{this.deliveryDetails.postoffice}},{{this.deliveryDetails.pincode}}</th> --}}
								<td>{{this.product.product}}</td>
								<td><img src="/product-images/{{this.product.image}}" style="width: 50px; height:auto" id="imgView"></td>
								<td>{{this.quantity}}</td>
								{{!-- <td>{{this.status}}</td> --}}
								{{!-- <td><a class="btn btn-primary" href="/view-order-products?id={{this._id}}">View</a></td> --}}
                               
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>